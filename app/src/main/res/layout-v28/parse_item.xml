<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        style="@style/CardView.Dark"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/gradient"
            android:layout_gravity="bottom"/>

        <TextView
            android:id="@+id/day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="top"
            android:text="DAYS"
            style="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#fff"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/eat1"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:firstBaselineToTopHeight="80dp"
            android:paddingTop="30dp"
            android:text="Eat 1 "
            android:textColor="#fff"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/eat2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_gravity="top"
            android:text="Eat 2"
            android:textColor="#fff"
            android:paddingTop="30dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:firstBaselineToTopHeight="80dp"
            android:paddingStart="170dp" />

        <TextView
            android:id="@+id/eat3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_gravity="top"
            android:text="Eat 3"
            android:textColor="#fff"
            android:paddingTop="30dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:firstBaselineToTopHeight="80dp"
            android:paddingStart="320dp" />

        <TextView
            android:id="@+id/eat4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_gravity="top"
            android:text="Eat 4"
            android:textColor="#fff"
            android:paddingTop="30dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:firstBaselineToTopHeight="150dp"
            android:paddingStart="90dp" />

        <TextView
            android:id="@+id/eat5"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:firstBaselineToTopHeight="150dp"
            android:paddingStart="250dp"
            android:paddingTop="30dp"
            android:text="Eat 5"
            android:textColor="#fff"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="bottom"
            android:text="Yemekhane saat 13.00 - 17.00 arasında açıktır "
            style="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#fff"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            tools:ignore="RtlCompat" />



    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>